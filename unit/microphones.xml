<!DOCTYPE template>
<Template>

    <!--
    **************************************************************************************
    MICROPHONE UNIT BEGIN
    **************************************************************************************
    -->
    <WidgetGroup>
        <ObjectName>Row</ObjectName>
        <Layout>horizontal</Layout>
        <SizePolicy>me,max</SizePolicy>
        <Children>

            <SizeAwareStack>
                <Children>
                   <WidgetGroup>
                        <Layout>horizontal</Layout>
                        <MinimumSize>0,-1</MinimumSize>
                        <MaximumSize>1279,-1</MaximumSize>
                        <Children>

                            <Template src="skin:unit/microphones_sm.xml"/>

                        </Children>
                   </WidgetGroup>
                   <WidgetGroup>
                        <Layout>horizontal</Layout>
                        <MinimumSize>1280,-1</MinimumSize>
                        <MaximumSize>1439,-1</MaximumSize>
                        <Children>

                            <Template src="skin:unit/microphones_md.xml"/>

                        </Children>
                   </WidgetGroup>
                   <WidgetGroup>
                        <Layout>horizontal</Layout>
                        <MinimumSize>1440,-1</MinimumSize>
                        <MaximumSize>-1,-1</MaximumSize>
                        <Children>

                            <Template src="skin:unit/microphones_lg.xml"/>

                        </Children>
                   </WidgetGroup>
                </Children>
            </SizeAwareStack>

        </Children>
        <Connection>
            <ConfigKey persist="true">[Microphone],show_microphone</ConfigKey>
            <BindProperty>visible</BindProperty>
        </Connection>
    </WidgetGroup>
    <!--
    **************************************************************************************
    MICROPHONE UNIT END
    **************************************************************************************
    -->

</Template>